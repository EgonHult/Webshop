@model LoginModel

@{
    ViewData["Title"] = "Logga In";
}

@if (!String.IsNullOrEmpty(@ViewBag.LoginResult))
{
    <div class="alert alert-warning" role="alert">
        @ViewBag.LoginResult
    </div>
}

<div class="card text-white bg-dark mb-3 mx-auto" style="margin-top: 60px; max-width: 400px; background-color: rgba(0,0,0, 0.5) !important">
    <div class="card-header">Logga In</div>
    <div class="card-body">
        <form asp-action="Login">
            <div class="form-group">
                <label asp-for="UserEmail" class="control-label">E-post</label>
                <input asp-for="UserEmail" type="email" class="form-control" placeholder="exempel@epostadress.se" />
                <span asp-validation-for="UserEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserPassword" class="control-label">Lösenord</label>
                <input asp-for="UserPassword" type="password" class="form-control" placeholder="ditt lösenord" />
                <span asp-validation-for="UserPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="RememberUser">
                        <input asp-for="RememberUser" type="checkbox" data-val="true" data-val-required="The Remember me? field is required." value="true" />
                        Kom ihåg mig?
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Logga in som fan" class="btn btn-success" />
            </div>
            <p>Inte medlem? Komsi, komsi <a asp-action="Register">Bli medlem nu!</a></p>
        </form>
    </div>
</div>